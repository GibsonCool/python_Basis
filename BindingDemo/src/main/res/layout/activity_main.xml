<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android">

	<data>

		<variable
			name="user"
			type="com.example.bindingdemo.bean.User"/>
		<variable
			name="userOb"
			type="com.example.bindingdemo.bean.UserOB"></variable>

		<variable
			name="handler"
			type="com.example.bindingdemo.MainActivity.Myhandlers"></variable>

		<import type="java.util.Map"></import>

		<variable
			name="maps"
			type="Map&lt;String,String&gt;"></variable>
	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_horizontal"
		android:orientation="vertical">

		<TextView
			android:id="@+id/first_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@{@dimen/margin2}"
			android:text="@{user.firstName}"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="@{@dimen/margin2}"
			android:text="@{userOb.lastName}"/>

			<!--android:layout_margin="@{@dimen/margin1 + @dimen/margin2}"-->	//为什么不可以使用？
		<TextView
			android:id="@+id/last_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{maps[`key`]+maps[`key2`]}"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text='@{1>0?"111":"000"}'/>

		<!-- 方法引用 -->
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{handler::onClick}"
			android:text="改变firstName"/>
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{handler::onClickOb}"
			android:text="改变lastName"/>


		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="sss"
			android:onTextChanged="@{handler::onTextChanged}"/>


		<!-- 监听器绑定 -->
		<EditText
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="333"
			android:onTextChanged="@{()->handler.changeLasterName(user.lastName)}"
			/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{handler::onClickRecyclerView}"
			android:text="recyclerView"/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{()->handler.jumpToOtherActivity(`viewsub`)}"
			android:text="viewsub"/>

	</LinearLayout>
</layout>