<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:bind="http://schemas.android.com/apk/res-auto">

	<data>

		<variable
			name="user"
			type="com.example.kotlinbindingdemo.User"></variable>


	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		tools:context=".MainActivity">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`firstName:`+user.firstName}"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`lastName:`+user.lastName}"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`age:`+String.valueOf(user.age)}"/>

		<ViewStub
			android:layout="@layout/view_sub"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>

		<include layout="@layout/view_include" bind:user="@{user}"></include>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="切换"/>

	</LinearLayout>

</layout>