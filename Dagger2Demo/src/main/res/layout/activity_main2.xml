<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="user"
			type="com.example.dagger2demo.javaBean.User"></variable>

		<variable
			name="userParams"
			type="com.example.dagger2demo.javaBean.UserParams"/>

		<variable
			name="userParams2"
			type="com.example.dagger2demo.javaBean.UserParams"/>

		<variable
			name="userParams3"
			type="com.example.dagger2demo.javaBean.UserParams"/>

		<variable
			name="userParams4"
			type="com.example.dagger2demo.javaBean.UserParams"/>


		<variable
			name="presenter2"
			type="com.example.dagger2demo.Main2Activity.Presenter2"/>

	</data>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:orientation="vertical"
		tools:context=".MainActivity">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`name:`+user.name}"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`params:`+userParams.name}"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`params2:`+userParams2.name}"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`params3:`+userParams3.name}"
			/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{`params4:`+userParams4.name}"
			/>

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="@{()->presenter2.onClickLazyInit()}"
			android:text="延迟加载"/>


	</LinearLayout>
</layout>